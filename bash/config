export TERM=screen-256color
export LC_ALL=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export LANG=en_US.UTF-8
export EDITOR='vim'
export GIT_EDITOR='vim'
export ACK_PAGER_COLOR="less -R"
export ALTERNATE_EDITOR=""
export NVM_DIR=~/.nvm

# boot 2 docker
export DOCKER_TLS_VERIFY=1
export DOCKER_HOST=tcp://192.168.59.103:2376
export DOCKER_CERT_PATH=/Users/dejanr/.boot2docker/certs/boot2docker-vm

source ~/.dotfiles/bash/paths
source ~/.dotfiles/bash/functions
source ~/.dotfiles/bash/prompt
source ~/.dotfiles/bash/aliases

# Completion
source ~/.dotfiles/bash/completion/alias-completion.bash
source ~/.dotfiles/bash/completion/git-completion.bash

complete -o default -o nospace -F _git gco
complete -o default -o nospace -F _git gb

# Git Aliases AutoComplete
type __git_complete >/dev/null 2>&1 && {
    __git_complete   gc       _git_commit
    __git_complete   gc!      _git_commit
    __git_complete   gca      _git_commit
    __git_complete   gca!     _git_commit
    __git_complete   gco      _git_checkout
    __git_complete   gb       _git_branch
    __git_complete   gs       _git_status
}

# Node version manager
if [ -s "$NVM_DIR/nvm.sh" ]; then
  source ~/.nvm/nvm.sh
  [[ -r $NVM_DIR/bash_completion ]] && . $NVM_DIR/bash_completion
fi

# .NET version manager
if [ -s "/usr/local/bin/dnvm.sh" ]; then
  source dnvm.sh
fi

# bash completion
if [ -x brew ] && [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

# nix env
[ -f ~/.nix-profile/etc/profile.d/nix.sh ] && . ~/.nix-profile/etc/profile.d/nix.sh

# Enable tab completion with sudo
complete -cf sudo

# NPM log level
export npm_config_loglevel=warn

# Disable XOFF
stty ixany
stty ixoff -ixon
