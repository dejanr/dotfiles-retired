export GOPATH=~/projects

export GEM_HOME=$HOME/.gem
export PATH=$GEM_HOME/bin:$PATH

if [[ "$(uname -s)" == "Darwin" ]]; then
  export JAVA_HOME=$(/usr/libexec/java_home)
  export ANDROID_HOME=~/Library/Android/sdk
  export PATH="~/Library/Android/sdk/platform-tools:~/Library/Android/sdk/tools:~/Library/Android/sdk/tools/bin:$PATH"
fi

export PATH="$HOME/.npm/bin:node_modules/.bin:$HOME/.bin:/run/current-system/sw/bin:/usr/local/bin:/usr/local/sbin:$GOPATH/bin:$PATH"

export NIX_PATH=nixpkgs=/etc/nixos/nixpkgs:nixos-config=/etc/nixos/configuration.nix:$NIX_PATH
export NIX_PATH=darwin=/etc/nixos/darwin:darwin-config=/etc/nixos/machines/darwin.nix:$NIX_PATH
