[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  password = <%= print("GitHub Password: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[color]
  diff = auto
  branch = auto
  ui = auto
[color "status"]
  header = normal
  added = magenta yellow
  updated = green bold
  changed = red bold
  untracked = normal
  nobranch = red bold
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
[diff]
  renamelimit = 0
	algorithm = patience
[instaweb]
  local = true
  browser = chrome
[rerere]
    enabled = true
[push]
	default = simple
[alias]
  s = status
  # log all changes from latest pull
  c = log --no-merges --stat @{1}..
  # log with diff
  ld = log -p
  br = branch
  co = checkout
  pom = push origin master
  rank = shortlog -sn --no-merges
  who = shortlog -s --
  # treeish like history
  hist = log --no-merges --pretty=format:\"%h %ad | [%an] %s%d\" --graph --date=short
