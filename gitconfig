[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
	quotepath = off
	editor = emacsclient
	pager = diff-so-fancy | less
[diff]
  renamelimit = 0
  algorithm = patience
[instaweb]
  local = true
  browser = chrome
[rerere]
    enabled = true
[push]
  default = simple
[alias]
  s = status
  # log all changes from latest pull
  c = log --no-merges --stat @{1}..
  # log with diff
  ld = log -p
  br = branch
  co = checkout
  pom = push origin master
  rank = shortlog -sn --no-merges
  who = shortlog -s --
  # treeish like history
  hist = log --no-merges --pretty=format:\"%h %ad | [%an] %s%d\" --graph --date=short
[pager]
  log = diff-so-fancy | less
  show = diff-so-fancy | less
  diff = diff-so-fancy | less
